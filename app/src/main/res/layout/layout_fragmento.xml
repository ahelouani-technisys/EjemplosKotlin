<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Fragmentos.BaseFragmentos" android:id="@+id/container">


    <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.ejemplo1_curso_kotlin.Fragmentos.ListadoPeliculas" android:id="@+id/flista"/>
    <TextView
            android:text="Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvNombre"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>
    <Button
            android:text="Agregar Fragmento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bAdd"/>
    <Button
            android:text="Remplazar fragmentoe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bReplace"/>

</LinearLayout>