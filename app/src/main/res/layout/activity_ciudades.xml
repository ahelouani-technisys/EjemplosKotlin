<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Ciudades" android:background="@color/Fondo"
        android:orientation="vertical">

    <TextView
            android:text="@string/texto_bienvenida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvPresentacion" android:textColor="#ECE1E1"
            android:textSize="24sp" android:textAlignment="center" android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    <Button
            android:text="Argentina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bArgentina" android:layout_margin="10dp"/>
    <Button
            android:text="MÃ©xico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bMexico" android:layout_margin="10dp"/>
    <Button
            android:text="Hay internet?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bInternet"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvResultado"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Buscar" android:id="@+id/tiBuscador"/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>