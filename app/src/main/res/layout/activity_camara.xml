<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Camara.Camara">

    <ImageView
            android:layout_width="177dp"
            android:layout_height="186dp" app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/ivFoto" android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Sacar foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/bFoto" android:layout_marginTop="212dp"
            app:layout_constraintTop_toBottomOf="@+id/ivFoto" app:layout_constraintHorizontal_bias="0.873"
            app:layout_constraintEnd_toStartOf="@+id/bSeleccionar" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Sleccionar fotoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bSeleccionar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginTop="212dp" app:layout_constraintTop_toBottomOf="@+id/ivFoto"/>
</androidx.constraintlayout.widget.ConstraintLayout>